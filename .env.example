# ======================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ======================

# Режим работы
NODE_ENV=development
PORT=3000

# Безопасность
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
API_KEY=your_api_key_for_external_integrations
SESSION_SECRET=your_session_secret_key

# ======================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ======================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=omadvert
DB_USER=postgres
DB_PASSWORD=123456
DB_SSL=false

# Redis (для кэширования)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# ======================

LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# ======================
# НАСТРОЙКИ API
# ======================

CORS_ORIGIN=http://localhost:3000,http://localhost:8080
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# ======================
# НАСТРОЙКИ ПИНГЕРА
# ======================

REPORT_GENERATION_CRON=0 2 * * *  # Ежедневно в 2:00
DATA_RETENTION_DAYS=90

# ======================
# ВНЕШНИЕ API
# ======================

ADVERTISER_API_URL=https://api.advertiser.com/v1
ADVERTISER_API_KEY=your_advertiser_api_key

# ======================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ======================

PASSWORD_SALT_ROUNDS=12
TOKEN_EXPIRY=24h  # 24 часа
REFRESH_TOKEN_EXPIRY=7d  # 7 дней

# ======================
# НАСТРОЙКИ ОТЧЕТОВ
# ======================

REPORT_TIMEZONE=Europe/Moscow
DATE_FORMAT=DD.MM.YYYY
DECIMAL_SEPARATOR=,